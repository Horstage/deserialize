{
    "files.exclude": {
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        ".cache/": true,
        "bin/": true,
        "include/": true,
        "junit/": true,
        "lib/": true,
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        "./tests",
        "-p",
        "test_*.py"
    ]
}